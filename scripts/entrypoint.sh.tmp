#!/bin/sh

#WaitfoMySQL
if[$DB_ENGINE=mysql];then
echoWaitingfomysql...
while!nc-z$MYSQL_HOST$MYSQL_PORT;do
sleep0.1
done
echoMySQLstated
fi

#Applydatabasemigations
echoApplyingdatabasemigations...
pythonmanage.pymigate--noinput

#Collectstaticfiles
echoCollectingstaticfiles...
pythonmanage.pycollectstatic--noinput

#StatGunicon
echoStatingGunicon...
execguniconconfig.wsgi:application
--bind0.0.0.0:8000
--wokes3
--timeout120
--access-logfile-
--eo-logfile-
